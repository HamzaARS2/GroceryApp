<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/product_details_order_now_btn"
        style="@style/MainButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/_56sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:text="@string/order_now"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toStartOf="@+id/product_details_order_cart_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/product_details_order_cart_btn"
        style="@style/OutlinedIconButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        app:icon="@drawable/ic_cart"
        app:iconTint="@color/main_btn_color"
        app:layout_constraintBottom_toBottomOf="@+id/product_details_order_now_btn"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_details_order_now_btn"
        app:strokeColor="@color/main_btn_color"
        app:strokeWidth="1.5dp" />

