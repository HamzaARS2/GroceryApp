<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_6sdp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:id="@+id/shop_header_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tetouan, Morocco"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/gilroy_semi_bold"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:drawableStartCompat="@drawable/location_marker" />

    <EditText
        android:id="@+id/shop_header_search_edt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:background="@drawable/settings_box_ripple"
        android:hint="Search Store"
        android:fontFamily="@font/gilroy_medium"
        android:inputType="text"
        android:layout_marginTop="@dimen/_8sdp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/_8sdp"
        android:paddingHorizontal="18dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/subtitle_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_header_location" />

    <ImageView
        android:id="@+id/shop_header_vp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        app:layout_constraintDimensionRatio="3:1"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_header_search_edt"
        app:srcCompat="@drawable/store_dummy_image" />


</androidx.constraintlayout.widget.ConstraintLayout>