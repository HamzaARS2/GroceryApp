<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_6sdp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:id="@+id/shop_header_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tetouan, Morocco"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/gilroy_semi_bold"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:drawableStartCompat="@drawable/location_marker" />

    <TextView
        android:id="@+id/shop_header_search_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/settings_box_ripple"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/search_store"
        android:paddingHorizontal="@dimen/_14sdp"
        android:gravity="center_vertical"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/subtitle_color"
        android:drawablePadding="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_header_location"
        app:drawableStartCompat="@drawable/ic_search"
        app:drawableTint="@color/subtitle_color" />


</androidx.constraintlayout.widget.ConstraintLayout>