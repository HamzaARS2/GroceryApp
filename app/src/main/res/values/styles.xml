<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="ThemeOverlay.Material3.Button" >
        <item name="android:fontFamily">@font/gilroy_semi_bold</item>
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="backgroundTint">#53B175</item>
    </style>

    <style name="OutlinedIconButtonStyle" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="strokeColor">@color/outline_color</item>
    </style>

    <style name="AddProductBtnStyle">
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="backgroundTint">#53B175</item>
    </style>

    <style name="BottomNavBarTextStyle" parent="TextAppearance.Material3.TitleSmall" >
        <item name="fontFamily">@font/gilroy_semi_bold</item>
    </style>
    
    <style name="CustomIndicatorStyle" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator" >
        <item name="android:color">@color/main_btn_color</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="colorSurface">@android:color/holo_red_dark</item>
        <item name="colorOnSurfaceVariant">@android:color/holo_green_dark</item>
    </style>
</resources>